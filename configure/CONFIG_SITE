# CONFIG_SITE - site-specific build configuration settings

# Enable build of different process variable access methods
PVCA   = TRUE
PVFILE = FALSE
PVTKL  = FALSE

# To restrict the architectures to cross-compile for, set this:
#CROSS_COMPILER_TARGET_ARCHS = vxWorks-68040

# PCDS
# Restrict to 32bit linux host till 64bit problems are resolved
#
BUILD_FOR_HOST_ARCH	= 
ifeq '$(EPICS_HOST_ARCH)' 'linux-x86'
CROSS_COMPILER_TARGET_ARCHS  =  RTEMS-beatnik
CROSS_COMPILER_TARGET_ARCHS +=  linux-x86
endif
CROSS_COMPILER_TARGET_ARCHS  =  linux-x86_64

